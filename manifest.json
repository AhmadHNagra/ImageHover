{
    "manifest_version": 3,
    "name": "Media Preview Hover",
    "version": "1.0",
    "description": "Shows preview of images and videos on hover",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "settings.html"
    }
}